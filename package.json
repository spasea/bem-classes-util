{
  "name": "bem-classes-util",
  "version": "0.0.4",
  "description": "A utility to manage classnames conveniently",
  "main": "index.js",
  "module": "lib/index.ts",
  "author": "Peter Smaznoy <ithespv@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/spasea/bem-classes-util.git",
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watchAll",
    "test-coverage": "jest --coverage",
    "dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "build": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.6.1",
    "cross-env": "5.1.4",
    "jest": "^22.4.3",
    "laravel-mix": "^2.1.11",
    "regenerator-runtime": "^0.11.1",
    "ts-loader": "3.5.0",
    "typescript": "^2.8.3",
    "webpack": "3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/preprocessor.js",
      "^.+\\.js$": "babel-jest"
    },
    "testRegex": "^.+\\.test\\.(ts|js)$"
  }
}
