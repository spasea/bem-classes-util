{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "lib/*": ["lib/*"]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "noImplicitAny": false,
    "sourceMap": false,
    "lib": [
      "dom",
      "es7"
    ]
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}